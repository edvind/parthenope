---
layout: base.njk
eleventyComputed:
  eleventyNavigation:
    key: "{{ lang }}Posts"
    parent: "{{ lang }}Frontpage"
---
<h1>{{ title }}</h1>
{{ content | safe }}
{% for post in collections.posts[lang] | reverse %}
  <article>
    <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
    <p>
      <time datetime="{{ post.date | dateToRfc3339 }}">
        {{- post.date | date(lang) -}}
      </time>
    </p>
  </article>
{% endfor %}

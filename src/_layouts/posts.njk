---
layout: base.njk
---
<h1>{{ title }}</h1>
{{ content }}
{% for post in collections.posts[locale] | reverse %}
  <article>
    <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
    <p>
      <time datetime="{{ post.date | dateToRfc3339 }}">
        {{- post.date | date(locale) -}}
      </time>
    </p>
  </article>
{% endfor %}
